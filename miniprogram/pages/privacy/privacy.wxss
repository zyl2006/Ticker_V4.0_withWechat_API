/* pages/privacy/privacy.wxss */
/* 隐私政策页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  background: #ffffff;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow-y: auto;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  color: #3b82f6;
  font-size: 36rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
  text-align: center;
}

.privacy-content {
  line-height: 1.8;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.section-content {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.8;
}

.section-content text {
  display: block;
  margin-bottom: 8rpx;
  padding-left: 16rpx;
}

.section-content text:first-child {
  padding-left: 0;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.footer {
  padding: 24rpx;
  background: #ffffff;
  border-top: 2rpx solid #e2e8f0;
  display: flex;
  gap: 16rpx;
}

.footer .btn {
  flex: 1;
  min-height: 80rpx;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .content {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .title {
    font-size: 36rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .section-content {
    font-size: 26rpx;
  }
  
  .footer {
    flex-direction: column;
  }
  
  .footer .btn {
    width: 100%;
  }
}
