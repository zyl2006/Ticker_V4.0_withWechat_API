/* pages/home/home.wxss */
/* 首页样式 */

/* 英雄区域 */
.hero-section {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
  padding: 80rpx 32rpx 64rpx;
  text-align: center;
  color: white;
  margin-bottom: 32rpx;
}

.hero-content {
  max-width: 600rpx;
  margin: 0 auto;
}

.project-logo {
  margin-bottom: 32rpx;
}

.logo-icon {
  font-size: 120rpx;
  display: block;
}

.project-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.project-description {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.project-version {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 功能特色 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.feature-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid var(--border-color);
  transition: var(--transition);
}

.feature-card:active {
  transform: scale(0.98);
  border-color: var(--primary-color);
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 样式展示网格 */
.styles-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.style-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  overflow: hidden;
  border: 2rpx solid var(--border-color);
  transition: var(--transition);
  cursor: pointer;
}

.style-card:active {
  transform: scale(0.98);
  border-color: var(--primary-color);
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.1);
}

.style-preview-container {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary);
}

.style-placeholder {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.style-info {
  padding: 24rpx;
}

.style-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.style-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 快速操作 */
.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 32rpx;
}

.btn-large {
  padding: 32rpx;
  font-size: 32rpx;
  min-height: 120rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .styles-grid {
    grid-template-columns: 1fr;
  }
  
  .project-title {
    font-size: 40rpx;
  }
  
  .logo-icon {
    font-size: 100rpx;
  }
}