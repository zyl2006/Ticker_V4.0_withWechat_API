/* styles/variables.wxss */
/* 样式变量定义 - 兼容多端插件模式 */

/* 颜色变量 */
page {
  /* 颜色变量 */
  --primary-color: #4f46e5; /* 更柔和的紫蓝色 */
  --primary-hover: #4338ca;
  --secondary-color: #7c3aed; /* 更柔和的紫色 */
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --error-color: #ef4444;
  
  /* 文本颜色 */
  --text-primary: #111827;
  --text-secondary: #6b7280;
  --text-muted: #9ca3af;
  
  /* 背景颜色 */
  --bg-primary: #ffffff;
  --bg-secondary: #f8fafc;
  --bg-tertiary: #f1f5f9;
  
  /* 边框颜色 */
  --border-color: #e2e8f0;
  --border-hover: #cbd5e1;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  --shadow-md: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 20rpx 32rpx rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 40rpx 50rpx rgba(0, 0, 0, 0.1);
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-2xl: 64rpx;
  
  /* 字体大小 */
  --font-xs: 20rpx;
  --font-sm: 24rpx;
  --font-md: 28rpx;
  --font-lg: 32rpx;
  --font-xl: 36rpx;
  --font-2xl: 40rpx;
  --font-3xl: 48rpx;
  
  /* 过渡动画 */
  --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 兼容性样式类 - 直接定义颜色值 */
.primary-color { color: #4f46e5; }
.secondary-color { color: #7c3aed; }
.success-color { color: #10b981; }
.warning-color { color: #f59e0b; }
.error-color { color: #ef4444; }

.text-primary { color: #111827; }
.text-secondary { color: #6b7280; }
.text-muted { color: #9ca3af; }

.bg-primary { background-color: #ffffff; }
.bg-secondary { background-color: #f8fafc; }
.bg-tertiary { background-color: #f1f5f9; }

.border-color { border-color: #e2e8f0; }
.border-hover { border-color: #cbd5e1; }

.shadow-sm { box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05); }
.shadow-md { box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1); }
.shadow-lg { box-shadow: 0 20rpx 32rpx rgba(0, 0, 0, 0.1); }
.shadow-xl { box-shadow: 0 40rpx 50rpx rgba(0, 0, 0, 0.1); }

.radius-sm { border-radius: 12rpx; }
.radius-md { border-radius: 16rpx; }
.radius-lg { border-radius: 24rpx; }
.radius-xl { border-radius: 32rpx; }
