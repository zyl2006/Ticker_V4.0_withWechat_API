/* app.wxss */
/* 全局样式 */

/* 导入样式变量 */
@import './styles/variables.wxss';

/* 全局重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
  background-color: var(--bg-primary);
}

/* 通用容器 */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
}

.content {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: 32rpx;
  box-shadow: var(--shadow-lg);
  margin-bottom: 32rpx;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  color: var(--primary-color);
  font-size: 32rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
  min-height: 88rpx;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  box-shadow: var(--shadow-md);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: var(--bg-primary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

.btn-secondary:active {
  background: var(--bg-secondary);
  transform: scale(0.98);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
}

.btn-ghost:active {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--border-color);
  background: var(--bg-primary);
  font-size: 28rpx;
  color: var(--text-primary);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.1);
}

.form-input.disabled {
  background: var(--bg-tertiary);
  color: var(--text-muted);
}

/* 卡片样式 */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: 32rpx;
  box-shadow: var(--shadow-md);
  border: 2rpx solid var(--border-color);
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-title-icon {
  color: var(--primary-color);
}

/* 网格布局 */
.grid {
  display: grid;
  gap: 24rpx;
}

.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  color: var(--text-secondary);
}

.loading-icon {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 128rpx 64rpx;
  color: var(--text-muted);
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 消息提示 */
.message {
  padding: 24rpx 32rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.message-success {
  background: linear-gradient(135deg, #d1fae5, #a7f3d0);
  color: #065f46;
  border: 2rpx solid #10b981;
}

.message-error {
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  color: #991b1b;
  border: 2rpx solid #ef4444;
}

.message-warning {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  border: 2rpx solid #f59e0b;
}

.message-icon {
  font-size: 32rpx;
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mt-small { margin-top: 16rpx; }
.mt-medium { margin-top: 32rpx; }
.mt-large { margin-top: 64rpx; }

.mb-small { margin-bottom: 16rpx; }
.mb-medium { margin-bottom: 32rpx; }
.mb-large { margin-bottom: 64rpx; }

.p-small { padding: 16rpx; }
.p-medium { padding: 32rpx; }
.p-large { padding: 64rpx; }

.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-around { justify-content: space-around; }

.w-full { width: 100%; }
.h-full { height: 100%; }

.hidden { display: none; }
.visible { display: block; }
