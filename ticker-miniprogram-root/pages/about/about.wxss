/* pages/about/about.wxss */
/* 关于页面样式 */

/* 应用信息 */
.app-info {
  text-align: center;
  padding: 64rpx 32rpx;
}

.app-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-muted);
  background: var(--bg-secondary);
  padding: 8rpx 16rpx;
  border-radius: var(--radius-md);
  display: inline-block;
}

/* 菜单组 */
.menu-group {
  margin-top: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid var(--border-color);
  transition: var(--transition);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--bg-secondary);
  transform: scale(0.98);
}

.menu-item.danger {
  color: var(--error-color);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.menu-badge {
  background: var(--primary-color);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 信息列表 */
.info-list {
  margin-top: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 64rpx 32rpx;
  color: var(--text-muted);
}

.copyright {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .app-info {
    padding: 48rpx 16rpx;
  }
  
  .app-icon {
    font-size: 96rpx;
  }
  
  .app-name {
    font-size: 40rpx;
  }
  
  .menu-item {
    padding: 24rpx 0;
  }
  
  .info-item {
    padding: 20rpx 0;
  }
}

/* 动画效果 */
.menu-item {
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 危险操作样式 */
.menu-item.danger .menu-icon {
  color: var(--error-color);
}

.menu-item.danger .menu-text {
  color: var(--error-color);
}
